---
interface Props {
    title: string;
    description: string;
    link: string;
    date: string;
}

const { title, description, link, date } = Astro.props;
---
<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700"
  >
  </div>
  <time class="mb-2 pl-4 text-sm font-normal leading-none text-gray-200">{date}</time
  >
  <h3 style="color: #8FFF00;" class="text-2xl pl-4 font-bold mt-2">
    {title}
  </h3>
  <p class="mb-4 pl-4 font-normal text-gray-500 text-pretty">
    {description}
  </p>
    <style>
    @media (max-width: 640px) {
      .text-2xl {
        font-size: 1.5rem;
      }
      .pl-4 {
        padding-left: 2rem;
      }
    }
  </style>
